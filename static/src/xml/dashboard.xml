<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="DashboardDashboard">
        <div class="o_dashboard">
            <div class="o_dashboard_content">
                <div class="o_dashboard_filter">
                    <select class="o_dashboard_filter_selection" onchange="odoo.my_project_extension.dashboard._onFilterSelectionChange(event)">
                        <option value="this_week">This Week</option>
                        <option value="this_month">This Month</option>
                        <option value="previous_week">Previous Week</option>
                        <option value="previous_month">Previous Month</option>
                    </select>
                    <select class="o_dashboard_assignee_filter" onchange="odoo.my_project_extension.dashboard._onAssigneeFilterChange(event)">
                        <option value="">All Assignees</option>
                        <t t-foreach="assignees" t-as="assignee">
                            <option t-att-value="assignee.id"><t t-esc="assignee.name"/></option>
                        </t>
                    </select>
                </div>
                <div class="o_dashboard_task_count">
                    <span class="o_dashboard_task_count_value">0</span>
                </div>
            </div>
        </div>
    </t>
</templates>
